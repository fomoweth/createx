{
	"printWidth": 120,
	"tabWidth": 4,
	"singleQuote": false,
	"trailingComma": "all",
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"useTabs": false,
				"bracketSpacing": false
			}
		},
		{
			"files": ["*.json", "*.js", "*.ts"],
			"options": {
				"useTabs": true,
				"bracketSpacing": true
			}
		}
	]
}
